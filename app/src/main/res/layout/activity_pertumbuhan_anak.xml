<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilAnakActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="16dp">

        <!-- Top App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#91C789"

            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

            <!-- Container for the content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <!-- Leading navigation icon (e.g., back button) -->
                <ImageView
                    android:id="@+id/leadingNavigationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:src="@drawable/arrowleft" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/headline"
                        android:layout_width="269dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:layout_marginRight="35dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Pertumbuhan Anak"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/headlineinfo"
                        android:layout_width="269dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:layout_marginRight="35dp"
                        android:layout_weight="1"
                        android:gravity="fill"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Yusuf - 0 Tahun 3 bulan 16 hari"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp" />
                </LinearLayout>

            </LinearLayout>


        </com.google.android.material.appbar.MaterialToolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:text="Terakhir diupdate" />

            <TextView
                android:id="@+id/tanggal"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="20dp"
                android:text="9 Sep 2023"
                android:textAlignment="textEnd" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="86dp"
                android:layout_height="122dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/rectangle_97"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="96dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="5dp"

                    app:srcCompat="@drawable/metronome" />

                <TextView
                    android:id="@+id/tvberat"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="2dp"
                    android:background="#E7FDFD"
                    android:gravity="center"
                    android:text="Berat Badan"
                    android:textColor="#0A8F8B"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvkg"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:text="3,1 kg"
                    android:textColor="#0A8F8B"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="122dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/rectangle_106"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="96dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="5dp"

                    app:srcCompat="@drawable/ruler" />

                <TextView
                    android:id="@+id/tvtinggi"
                    android:layout_width="86dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="Tinggi Badan"
                    android:textColor="#98B3B2"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvcm"
                    android:layout_width="86dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="60 cm"
                    android:textColor="#98B3B2"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="122dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/rectangle_106"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="86dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:paddingTop="15dp"
                    android:paddingBottom="5dp"
                    app:srcCompat="@drawable/baby" />

                <TextView
                    android:id="@+id/tvkepala"
                    android:layout_width="86dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text=" Lingkar Kepala"
                    android:textColor="#98B3B2"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvcm2"
                    android:layout_width="86dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="35 cm"
                    android:textColor="#98B3B2"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/grafikberat" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/line"
        app:layout_constraintBottom_toTopOf="@+id/btn_updatedata"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.0"
        app:layout_goneMarginTop="300dp" />

    <TextView
        android:id="@+id/btn_updatedata"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_stroke"
        android:gravity="center"
        android:text="Perbarui Data Anak"
        android:textAlignment="center"
        android:textColor="#0A8F8B"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1" />


</androidx.constraintlayout.widget.ConstraintLayout>