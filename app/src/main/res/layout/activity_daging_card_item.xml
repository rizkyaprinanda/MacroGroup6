<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="165dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="10dp"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:background="@drawable/item_background"> <!-- Menggunakan drawable background -->

    <ImageView
        android:id="@+id/imgDaging"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/daging_domba_giling"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/txtNamaDaging"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:padding="8dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="nama sayuran"
        android:background="#91C789"
        android:textColor="@android:color/white" />

</androidx.cardview.widget.CardView>
