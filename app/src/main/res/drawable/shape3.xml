<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Warna latar belakang -->
        </shape>
    </item>
    <!-- Border Stroke -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#108B4A" /> <!-- Warna garis tepi -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
